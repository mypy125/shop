<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>ProductServlet</servlet-name>
        <servlet-class>com.daniam.shop.servlet.ProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProductServlet</servlet-name>
        <url-pattern>/product/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StockServlet</servlet-name>
        <servlet-class>com.daniam.shop.servlet.StockServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StockServlet</servlet-name>
        <url-pattern>/stock/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StoreServlet</servlet-name>
        <servlet-class>com.daniam.shop.servlet.StoreServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StoreServlet</servlet-name>
        <url-pattern>/store/*</url-pattern>
    </servlet-mapping>
</web-app>